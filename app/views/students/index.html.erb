<h1>Grading Worksheet</h1>

<table>
  <tr class=title>
    <th valign=top width="100">Student ID </th>
    <th valign=top width="150">Student Name<br>Chinese) </th>
    <th valign=top width="120">Nick Name<br>English)</th>
    <th valign=top width="120">Project (40%)</th>
    <th valign=top width="120">Final (40%)</th>
    <th valign=top width="120">Lab (10%)</th>
    <th valign=top width="120">Class (10%)</th>
    <th valign=top width="80">Total</th>
    <th valign=top></th>
    <th valign=top></th>
  </tr>

<% @students.each do |student| %>
  <tr>
    <td><%= student.student_id %></td>
    <td><%= student.name %></td>
    <td><%= student.nickname %></td>
    <td><%= student.project %></td>
    <td><%= student.final %></td>
    <td><%= student.lab %></td>
    <td><%= student.classdiscussion %></td>
    <td><%= student.total %></td>
    <td><%= link_to 'Edit', edit_student_path(student) %></td>
    <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>


<br />

<%= link_to 'New Student', new_student_path %>
<%= will_paginate @students %>
