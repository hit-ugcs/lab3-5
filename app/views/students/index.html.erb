<h1>Grading Worksheet</h1>

<table>
  <tr>
    <th>Student ID</th>
    <th>Name (Chinese)</th>
    <th>Nickname (English)</th>
    <th>Project (40%)</th>
    <th>Final (40%)</th>
    <th>Lab (10%)</th>
    <th>Class (10%)</th>
    <th>Total</th>
    <th>Edit Grades</th>
    <th>Delete Student</th>

<% @students.each do |student| %>
  <tr>
    <td><%= student.student_id %></td>
    <td><%= student.name %></td>
    <td><%= student.nickname %></td>
    <td><%= student.project %></td>
    <td><%= student.final %></td>
    <td><%= student.lab %></td>
    <td><%= student.classdiscussion %></td>
    <td><%= student.total %></td>
    <td><%= link_to 'Edit', edit_student_path(student) %></td>
    <td><%= link_to 'Delete', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>


<br />

<div class="center btn btn-info"><%= link_to 'New Student', new_student_path %></div>
<%= will_paginate @students %>
